<ol class='items-list'>
    <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-formula'>{{localize 'Damage'}}</div>
        <div class='item-prop'>{{localize 'Type'}}</div>
        <div class='item-prop'>{{localize 'Ammunition'}}</div>
        <div class='item-controls'>
            <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Weapon'}}'
                data-type='weapon'>
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type='Weapon'}}
            </a>
        </div>
    </li>
    {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
            <div class='item-image post-item-description'>
                <a class='rollable' data-roll-type='item'>
                    <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                </a>
            </div>
            <h4 class="rollable" data-roll-type="weapon" data-item-id='{{item._id}}'>
                {{item.name}}
            </h4>
        </div>
        <div class='item-formula'>
            <span class="rollable" data-roll="{{item.system.damage}}" data-label="Damage roll for {{item.name}}">
            {{item.system.damage}}
            </span>
        </div>
        <div class='item-prop'>
            {{#if item.system.ranged}}
            {{localize 'BPNB_BORG.Item.Weapon.Ranged'}}
            {{else}}
            {{localize 'BPNB_BORG.Item.Weapon.Melee'}}
            {{/if}}
        </div>
        <div class='item-prop'>
            {{#if item.system.needs_ammo}}
            <input type="text" class="item-ammunition" name="item.system.ammunition" value="{{item.system.ammunition}}" data-dtype="Number" />
            {{else}}
            -
            {{/if}}
        </div>
        <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Weapon'}}'>
                <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Weapon'}}'>
                <i class='fas fa-trash'></i>
            </a>
        </div>
    </li>
    {{/each}}
</ol>